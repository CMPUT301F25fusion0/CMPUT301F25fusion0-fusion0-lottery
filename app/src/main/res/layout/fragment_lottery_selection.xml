<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Waiting List Title -->
    <TextView
        android:id="@+id/waitingListLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting List"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="6dp" />

    <!-- Waiting List -->
    <ListView
        android:id="@+id/waitingListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Winners Title -->
    <TextView
        android:id="@+id/winnersListLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winners"
        android:paddingTop="12dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Winners List -->
    <ListView
        android:id="@+id/winnersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/drawWinnersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw Winners" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Refresh" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Back" />
    </LinearLayout>

</LinearLayout>
